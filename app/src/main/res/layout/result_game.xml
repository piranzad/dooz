<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:id="@+id/result_layout"
    android:background="@drawable/gameoverback">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/img_gameover"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:src="@drawable/winimage"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="8">
            <TextView
                android:id="@+id/txt_player1_res"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="player1"
                android:textSize="20sp"
                android:textColor="#222"
                android:layout_margin="8dp"
                android:gravity="center"/>
            <TextView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="VS"
                android:textSize="20sp"
                android:textColor="#222"
                android:gravity="center"
                android:layout_margin="8dp"/>
            <TextView
                android:id="@+id/txt_player2_res"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="player2"
                android:textSize="20sp"
                android:textColor="#222"
                android:layout_margin="8dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="6">
            <TextView
                android:id="@+id/txt_EmtiazHarif_res"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textColor="#222"
                android:layout_margin="8dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#222"
                android:gravity="center"
                android:layout_margin="8dp"/>
            <TextView
                android:id="@+id/txt_EmtiazShoma_res"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textColor="#222"
                android:gravity="center"
                android:layout_margin="8dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="You Win"
            android:textSize="30sp"
            android:textColor="#610606"
            android:id="@+id/txt_result"
            android:textStyle="bold"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center"
        android:paddingRight="30dp"
        android:paddingLeft="30dp">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:text="main menu"
            android:layout_marginTop="15dp"
            android:onClick="intent_main"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_gravity="left"
            android:id="@+id/btn_mainmenu"
            android:background="@drawable/backbtn"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".1"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:id="@+id/btn_playagain"
            android:text="play again"
            android:layout_marginTop="15dp"
            android:onClick="reset"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_gravity="left"
            android:background="@drawable/sendbtn"/>
    </LinearLayout>

</RelativeLayout>


