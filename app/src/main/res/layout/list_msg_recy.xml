<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layout0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="3"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <de.hdodenhof.circleimageview.CircleImageView

            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/crl_img_msg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/example"
            app:civ_border_width="0dp"
            app:civ_border_color="#aba7a7"
            android:layout_gravity="bottom"
            android:layout_margin="2dp"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/listback2">

            <LinearLayout
                android:id="@+id/lay_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:textColor="#6e7074"
                    android:id="@+id/txt_Name"
                    android:textSize="14sp"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_gravity="center_vertical"
                    android:text="OMID"
                    />
                <TextView
                    android:id="@+id/txt_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="28dp"
                    android:layout_marginLeft="25dp"
                    android:text="Hello Emojis!"
                    android:gravity="right"
                    android:textColor="#000000"
                     />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:53"
                android:layout_marginLeft="28dp"
                android:layout_marginBottom="18dp"/>
            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1397.07.17"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="18dp"/>
                <TextView
                    android:id="@+id/txt_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delele"
                    android:textColor="#79230b"
                    android:layout_marginLeft="18dp"
                    android:visibility="visible"
                    android:layout_marginBottom="18dp"/>
                <TextView
                    android:id="@+id/txt_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm"
                    android:textColor="#79230b"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="18dp"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/txt_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="id"
                    android:textColor="#2db10f"
                    android:layout_margin="8dp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/txt_confirm_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2db10f"
                    android:layout_margin="8dp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/txt_usern"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2db10f"
                    android:layout_margin="8dp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/txt_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2db10f"
                    android:layout_margin="8dp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/txt_block"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2db10f"
                    android:layout_margin="8dp"
                    android:visibility="gone"/>
            </LinearLayout>

    </LinearLayout>

    </LinearLayout>






</LinearLayout>


